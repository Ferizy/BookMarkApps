<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/collectionContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#E6F1EF"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/collectionCL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BOOK COLLECTION"
                android:textColor="@color/black"
                android:textSize="30sp">

            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/round_margin"

                    android:backgroundTint="#A8D9F4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="FINISH BOOK"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_20"
                        android:textStyle="bold"></TextView>

                    <Button
                        android:id="@+id/finishBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="90dp"
                        android:backgroundTint="#A8D9F4"
                        android:text="SEE THE BOOK YOU ALREADY FINISH"
                        android:textColor="@color/black"
                        android:textSize="15sp"></Button>
                </RelativeLayout>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/bookshelf"></ImageView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/round_margin"
                    android:backgroundTint="#CBA8F4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="160dp"
                        android:layout_marginTop="10dp"
                        android:text="CURRENT READING BOOK"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_20"
                        android:textStyle="bold"></TextView>

                    <Button
                        android:id="@+id/readingBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="90dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="#CBA8F4"
                        android:text="YOUR CURRENT READING BOOK"
                        android:textColor="@color/black"
                        android:textSize="15sp"></Button>
                </RelativeLayout>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/booknglass"></ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/round_margin"
                    android:backgroundTint="#FFEDA9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="PLAN TO READ"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_20"
                        android:textStyle="bold"></TextView>

                    <Button
                        android:id="@+id/planBTN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="90dp"
                        android:backgroundTint="#FFEDA9"
                        android:text="WHAT'S YOUR PLAN ON READING ?"
                        android:textColor="@color/black"
                        android:textSize="15sp"></Button>

                </RelativeLayout>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/marketing_strategy"></ImageView>
            </RelativeLayout>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>